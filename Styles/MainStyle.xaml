<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:uc="clr-namespace:DisordersOfCarbohydrateMetabolismsCalculator.UserControls">

    
    
    <Style x:Key="MainBorder" TargetType="Border">
        <Style.Setters>
            
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="#262626" />

            <Setter Property="Clip">
                <Setter.Value>
                    <RectangleGeometry RadiusX="12" RadiusY="12" Rect="0,0,1197,828"/>
                </Setter.Value>
            </Setter>
            
        </Style.Setters>
    </Style>

    <Style x:Key="HeaderBorder" TargetType="Border">
        <Style.Setters>
            <Setter Property="Height" Value="28" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="CornerRadius" Value="12, 12, 0, 0" />
            <Setter Property="Background" Value="#262626" />
        </Style.Setters>
    </Style>



    <Style x:Key="HeaderStackPanel" TargetType="StackPanel">
        <Style.Setters>
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style.Setters>
    </Style>



    <Style x:Key="TitleTextBlock" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Foreground" Value="Snow" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0, 32, 0, 24" />
            <Setter Property="FontSize" Value="32" />
        </Style.Setters>
    </Style>

    <Style x:Key="CharecteristicTextBlock" TargetType="TextBlock" BasedOn="{StaticResource TitleTextBlock}">
        <Style.Setters>
            <Setter Property="Margin" Value="0, 24, 0, 0" />
        </Style.Setters>
    </Style>

    <Style x:Key="ResultTextBlock" TargetType="TextBlock" BasedOn="{StaticResource TitleTextBlock}">
        <Style.Setters>
            <Setter Property="Margin" Value="0" />
        </Style.Setters>
    </Style>



    <Style x:Key="BackgroundImage" TargetType="Image">
        <Style.Setters>
            <Setter Property="Source" Value="/Resources/background.png" />
            <Setter Property="Stretch" Value="Fill" />
            <Setter Property="Opacity" Value="0.8" />
        </Style.Setters>
    </Style>



    <Style x:Key="Parameter" TargetType="uc:ParameterTextBox">
        <Style.Setters>
            
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="Snow" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Margin" Value="0, 10, 0, 10" />
            <Setter Property="Height" Value="64" />
            <Setter Property="Width" Value="760" />

            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="Black" Opacity="0.45" />
                </Setter.Value>
            </Setter>

        </Style.Setters>
    </Style>



    <Style x:Key="ControlButton" TargetType="Button">
        
        <Style.Setters>

            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />

            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="40" />

            <Setter Property="Margin" Value="2, 0, 0, 0" />

        </Style.Setters>

        <Style.Triggers>
            
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#424242"/>
                <Setter Property="BorderBrush" Value="Transparent" />
            </Trigger>
            
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="DarkRed" />
                <Setter Property="BorderBrush" Value="Transparent" />
            </Trigger>
            
        </Style.Triggers>

    </Style>

    <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource ControlButton}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0, 12, 0, 0">
                            <StackPanel>
                                <Image Margin="7, 4, 7, 0" Width="22" Height="22" Source="/Resources/close.png"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style x:Key="CollapseButton" TargetType="Button" BasedOn="{StaticResource ControlButton}">
        
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0">
                            <StackPanel>
                                <Image Margin="6, 3, 6, 0" Width="24" Height="24" Source="/Resources/collapse.png" />
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>

        <Style.Triggers>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#686868" />
                <Setter Property="BorderBrush" Value="Transparent" />
            </Trigger>
        </Style.Triggers>
        
    </Style>
    
    

</ResourceDictionary>
